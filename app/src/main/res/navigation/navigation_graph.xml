<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="maharsh.server.app.fragments.HomeFragment"
        android:label="Saved Servers"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addServerFragment"
            app:destination="@id/addServerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/addServerFragment"
        android:name="maharsh.server.app.fragments.AddServerFragment"
        android:label="Add Server"
        tools:layout="@layout/fragment_add_server" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="maharsh.server.app.fragments.SettingsFragment"
        android:label="@string/settings" />
</navigation>